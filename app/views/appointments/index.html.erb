<div class="appointments-container">
  <h1>Your appointments</h1>
  <div class="tabs">
    <a href="#" class="tab active">Learning</a>
    <a href="#" class="tab">Teaching</a>
  </div>
  <ul class="inbox">
    <% @appointments.each do  |appointment| %>
    <li class="message">
      <%= image_tag("willem.jpeg", class: "avatar-large")%>
      <div class="message-name">
        <h3><%=  appointment.teacher.name %></h3>
      </div>
      <div class="message-body">
        <p><strong><%= "Subject: #{appointment.teacher.subject.name}  "  %></strong></p>
        <p>
          <%= "Date: #{appointment.date} "%>
        </p>
      </div>
      <div class="message-status">
        <% case appointment.status %>
        <% when "pending" %>
        <p class="status pending">Pending</p>
        <%when "accepted" %>
        <p class="status accepted">Accepted</p>
        <% when "declined" %>
        <p class="status declined">Declined</p>
        <%end %>
      </div>
    </li>
    <% end %>
  </ul>
</div>