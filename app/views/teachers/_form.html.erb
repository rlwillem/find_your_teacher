<div class="sign-up-form">
  <%= simple_form_for [@teacher] do |f| %>
    <%= f.input :name , label: 'Full Name:', required: false %>
    <%= f.association :subject, as: :select, label: 'Subject you teach:', required: false %>
    <%= f.input :description, :input_html => { 'rows' => 10}, label: 'Full description of your lesson:', required: false %>
    <%= f.input :rate ,as: :currency, label: 'Your hourly rate:', required: false %>
    <%= f.input :picture, label: 'Your profile picture:', required: false %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.submit "Teach now!", class: "button btn-main-base btn-main-styled"%>
  <% end %>
</div>