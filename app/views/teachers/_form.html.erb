<%= simple_form_for [@teacher] do |f| %>
<%= f.input :name %>
<%= f.input :description %>
<%= f.association :subject, as: :select %>
<%= f.input :rate ,as: :currency %>
<%= f.input :picture %>
<%= f.input :picture_cache, as: :hidden %>
<%= f.submit "Become a Teacher", class: "button btn-main-base btn-main-styled"%>
<% end %>