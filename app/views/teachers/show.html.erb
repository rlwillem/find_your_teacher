<div class="flex-container">
  <div class="flex-subject-description">
    <div class="left-column">
      <h3>Subject taught</h3>
      <p>
        <%= @teacher.subject.name.capitalize %>
      </p>
    </div>
    <div class="left-column">
      <h3>Lesson Description</h3>
      <p>
        <%= @teacher.description %>
      </p>
    </div>
  </div>
  <div class="flex-info">
    <div class="right-column">
      <h3><%= name = @teacher.name.split(" ").map { |name| name.capitalize }.join(" ") %></h3>
      <%=  cl_image_tag @teacher.picture, height: 250, width: 250, crop: :fill, class: "teacher-photo" %>
    </div>
    <div class="right-column">
      <h3>Rate</h3>
      <p>My hourly rate is $
        <%= @teacher.rate %>.
      </p>
    </div>
    <div class="right-column">
      <%if current_user.teachers.include?(@teacher) %>
      <br>
      <p>This is your profile</p>
      <% else %>
      <h3>Calendar</h3>
      <form action="/appointments"></form>
      <%= simple_form_for [@teacher, @appointment] do |f| %>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "Book now!", class: "button btn-main-base btn-main-styled" %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>